<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GrayButtonNoCorner">
        <item name="android:textColor">@color/button_normal_white_font_color</item>
        <item name="android:background">@drawable/button_gray_rounded_shape_no_corner_selector</item>
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_style_height</item>
        <item name="android:textSize">@dimen/button_small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>
