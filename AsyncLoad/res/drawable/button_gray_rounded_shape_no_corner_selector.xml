<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="90" android:endColor="@android:color/white" android:startColor="@color/gray_cccccc" />
            <stroke android:width="@dimen/button_selector_stroke_width" android:color="@color/transparent" />
            <padding android:left="@dimen/button_selector_padding" android:right="@dimen/button_selector_padding" />
        </shape>        
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/gray_333333" android:startColor="@color/gray_666666" />
            <stroke android:width="@dimen/button_selector_stroke_width" android:color="@color/gray_start_normal" />
            <padding android:left="@dimen/button_selector_padding" android:right="@dimen/button_selector_padding" />
        </shape>        
    </item>

    <item>
        <shape>
            <gradient android:angle="90" android:endColor="@color/gray_start_normal" android:startColor="@color/gray_end_normal" />
            <stroke android:width="@dimen/button_selector_stroke_width" android:color="@color/gray_start_normal" />
            <padding android:left="@dimen/button_selector_padding" android:right="@dimen/button_selector_padding" />
        </shape>        
     </item>
    
</selector>
